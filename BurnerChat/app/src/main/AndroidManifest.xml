<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BurnerChatApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.BurnerChat"
        tools:targetApi="31">
        <activity
            android:name=".webRTC.views.chats.ChatInfoActivity"
            android:exported="false" />
        <activity
            android:name=".webRTC.views.chats.CreateGroupChatView"
            android:exported="false" />
        <activity
            android:name=".webRTC.views.chats.CreateSingleChatView"
            android:exported="false" />
        <activity
            android:name=".firebase.FirebaseAuthView"
            android:exported="false" />
        <activity
            android:name=".webRTC.views.messages.MessagesActivity2"
            android:exported="false" />
        <activity
            android:name=".webRTC.views.users.UserProfileActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.BurnerChat" />
        <activity
            android:name=".webRTC.views.users.AddChatActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.BurnerChat" /> <!-- <activity -->
        <!-- android:name=".views.MessagesActivity" -->
        <!-- android:exported="false" -->
        <!-- android:theme="@style/Base.Theme.BurnerChat" /> -->
        <activity
            android:name=".webRTC.views.chats.ChatsView"
            android:exported="false"
            android:theme="@style/Base.Theme.BurnerChat" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.BurnerChat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>